<div class="container">
  <div class="card">
    <div class="bar"></div>
    <div class="question">
      <p><%= params[:answer] %></p>
      <p><em>- You</em></p>
    </div>
  </div>

  <div class="card">
    <div class="bar"></div>
    <div class="answer">
      <p><strong><%= @answer %></strong></p>
      <p><em>- Your coach</em></p>
    </div>
  </div>
  <%= link_to "Ask a new question", ask_path %>
</div>
